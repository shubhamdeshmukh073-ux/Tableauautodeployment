# Tableau Server Credentials - Source
# ---------------------------------
# Source server details
TABLEAU_SOURCE_SERVER=https://source-tableau.example.com
TABLEAU_SOURCE_SITE=YourSourceSite

# Source authentication (use either username/password or token)
TABLEAU_SOURCE_USERNAME=source_username
TABLEAU_SOURCE_PASSWORD=source_password
# OR
# TABLEAU_SOURCE_TOKEN_NAME=source_token_name
# TABLEAU_SOURCE_TOKEN_VALUE=source_token_value

# ---------------------------------
# Nexus Repository Integration
# ---------------------------------
# Nexus repo (raw or maven): e.g. https://nexus.example.com/repository/your-repo/
NEXUS_URL=https://nexus.example.com/repository/your-repo/
NEXUS_USERNAME=nexus_user
NEXUS_PASSWORD=nexus_password

# ---------------------------------
# GitHub Integration
# ---------------------------------
# GitHub access token (needs 'repo' permission)
GITHUB_TOKEN=ghp_xxxxyyyyzzzz1234567890
# GitHub repo in org/name form, e.g. myorg/myrepo
GITHUB_REPO=username/reponame

# Other Settings
# -------------
# API version (optional)
TABLEAU_API_VERSION=3.1 